{
  "$schema": "http://json-schema.org/schema",
  "id": "util-lib",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Library name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "directory": {
      "type": "string",
      "description": "The scope of your lib.",
      "x-prompt": "Which directory do you want the lib to be in?",
      "enum": ["store", "api", "shared"]
    }
  },
  "required": ["name"]
}
