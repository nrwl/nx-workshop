{
  "cli": "nx",
  "id": "util-lib",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Library name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "directory": {
      "type": "string",
      "description": "Library directory",
      "enum": [
        "store",
        "api",
        "shared"
      ],
      "x-prompt": {
        "message": "What is the scope for this library?",
        "type": "list",
        "items": [
          {
            "value": "store",
            "label": "/store"
          },
          {
            "value": "api",
            "label": "/api"
          },
          {
            "value": "shared",
            "label": "/shared"
          }
        ]
      }
    }
  },
  "required": ["name", "directory"]
}
