{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "UtilLib",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "tags": {
      "type": "string",
      "description": "Add tags to the project (used for linting)",
      "alias": "t"
    }, 
    "directory": {
      "type": "string",
      "description": "The scope of your lib.",
      "x-prompt": {
        "message": "Which directory do you want the lib to be in?",
        "type": "list",
        "items": [
          {
            "value": "store",
            "label": "store"
          },
          {
            "value": "api",
            "label": "api"
          },
          {
            "value": "shared",
            "label": "shared"
          }
        ]
      }
    }
  },
  "required": ["name"]
}
