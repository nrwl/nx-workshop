{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@bg-hoard/store/ui-shared": ["libs/store/ui-shared/src/index.ts"],
      "@bg-hoard/store/util-formatters": [
        "libs/store/util-formatters/src/index.ts"
      ],
      "@bg-hoard/store/feature-game-detail": [
        "libs/store/feature-game-detail/src/index.ts"
      ],
      "@bg-hoard/util-interface": ["libs/util-interface/src/index.ts"],
      "@bg-hoard/api/util-notifications": [
        "libs/api/util-notifications/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
